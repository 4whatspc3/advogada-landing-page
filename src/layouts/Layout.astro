---
import "../styles/global.css";
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Site da Dra. Vera Júlia Matos, advogada trabalhista dedicada à defesa dos seus direitos, oferecendo soluções jurídicas personalizadas e apoio especializado."
    />
    <meta name="author" content="Dra. Vera Júlia Matos" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/improvedlogo.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>Dra. Vera Júlia Matos | Advogada Trabalhista</title>
    <style>
      /* Estilos críticos para o <h1> */
      header h1 {
        font-size: 3rem; /* equivalente a text-5xl para telas pequenas */
        font-weight: 600; /* font-semibold */
        margin: 0 auto;
        line-height: 1.2;
      }

      /* Para dispositivos médios (md) */
      @media (min-width: 768px) {
        header h1 {
          text-align: left;
          max-width: 400px;
        }
      }

      /* Para dispositivos grandes (lg) */
      @media (min-width: 1024px) {
        header h1 {
          font-size: 3.75rem; /* equivalente a text-6xl */
          max-width: 500px;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
