<script>
  function displayMore(index) {
    const prg = document.querySelector(
      `.paragraph-more[data-index="${index}"]`
    );
    const btn = document.querySelector(`.display-more[data-index="${index}"]`);
    const expanded = btn.getAttribute("aria-expanded") === "true";

    prg.classList.toggle("hidden");
    btn.setAttribute("aria-expanded", String(!expanded));
  }

  const buttons = document.querySelectorAll(".display-more");
  buttons.forEach((btn) =>
    btn.addEventListener("click", () => {
      const idx = btn.dataset.index;
      displayMore(idx);
    })
  );
</script>
