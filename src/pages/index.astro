---
import About from "../components/about/About.astro";
import Hero from "../components/hero/Hero.astro";
import FAQ from "../components/questions/FAQ.astro";
import Services from "../components/services/Services.astro";
import Testimonials from "../components/testimonials/Testimonials.astro";
import WhyUS from "../components/why-us/whyUS.astro";
import Contact from "../components/contact/Contact.astro";

import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer/Footer.astro";
---

<Layout>
  <Hero />
  <About />
  <WhyUS />
  <Services />
  <Testimonials />
  <FAQ />
  <Contact />
  <Footer />
  <div class="w-full p-6 lg:p-8 lg:pt-0 bg-branco-gelo">
    <p
      class="italic font-serif text-base text-center p-2 bg-white outline-2 outline-dourado-ocre w-fit mx-auto"
    >
      Disclaimer: <br class="lg:hidden" /> Este é um site fictício desenvolvido exclusivamente
      para fins de portfólio.
    </p>
  </div>
  <a
    id="myButton"
    href="#inicio"
    class="bg-branco-gelo border border-dourado-ocre text-dourado-ocre shadow-xl rounded-full -rotate-90 hover:scale-110 duration-300 ease-in-out inline-block"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6 m-2 inline-block"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        fill-rule="evenodd"
        d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
        clip-rule="evenodd"></path>
    </svg>
  </a>
</Layout>

<style>
  #myButton {
    position: fixed;
    bottom: 20px;
    right: 20px;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }
  #myButton.visible {
    opacity: 1;
  }
</style>

<script>
  window.addEventListener("scroll", function () {
    const button = document.getElementById("myButton");
    if (window.scrollY >= window.innerHeight) {
      button.classList.add("visible");
    } else {
      button.classList.remove("visible");
    }
  });
</script>
